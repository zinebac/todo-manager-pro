<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Main Action: Active Tasks -->
        <record id="action_todo_task" model="ir.actions.act_window">
            <field name="name">My Todo Tasks</field>
            <field name="res_model">todo.task</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_active_tasks': 1, 'search_default_my_tasks': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"></p>
                <p class="lead">Ready to boost your productivity?</p>
                <p>
                    Create your first task and start getting things done! Use priorities, effort levels, and status tracking to stay organized and focused.
                </p>
                <p>
                    <a type="action" class="btn btn-primary btn-lg">
                        <i class="fa fa-plus me-2"></i>Create Your First Task
                    </a>
                </p>
            </field>
        </record>

        <!-- Action for Archived Tasks -->
        <record id="action_todo_task_archived" model="ir.actions.act_window">
            <field name="name">Archived Tasks</field>
            <field name="res_model">todo.task</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('active', '=', False)]</field>
            <field name="context">{'search_default_archived_tasks': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"></p>
                <p class="lead">Your archive is empty!</p>
                <p>
                    Completed or old tasks that you've archived will appear here. You can always unarchive them if needed.
                </p>
            </field>
        </record>

        <!-- Action for All Tasks -->
        <record id="action_todo_task_all" model="ir.actions.act_window">
            <field name="name">All Tasks</field>
            <field name="res_model">todo.task</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="domain">['|', ('active', '=', True), ('active', '=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    <i class="fa fa-tasks fa-3x text-info mb-3"></i>
                </p>
                <p class="lead">All your tasks in one place!</p>
                <p>
                    This view shows both active and archived tasks. Use filters to focus on what you need.
                </p>
            </field>
        </record>

        <!-- Professional Tree View -->
        <record id="view_todo_task_tree" model="ir.ui.view">
            <field name="name">todo.task.tree</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <tree editable="top" 
                      decoration-muted="not active" 
                      decoration-danger="is_overdue and not is_done" 
                      decoration-success="is_done"
                      decoration-warning="status == 'review'"
                      decoration-info="status == 'in_progress'"
                      decoration-bf="priority in ['3', '4']"
                      class="todo_tree_view">
                    
                    <!-- Essential Controls -->
                    <field name="is_done" widget="boolean_toggle" width="50px" nolabel="1"/>
                    <field name="priority" widget="priority" width="70px"/>
                    
                    <!-- Main Task Information -->
                    <field name="name" width="300px" required="1"/>
                    <field name="status" width="100px" 
                           decoration-success="status == 'done'"
                           decoration-info="status == 'in_progress'"
                           decoration-warning="status == 'review'"
                           decoration-muted="status == 'draft'"/>
                    
                    <!-- Progress and Effort -->
                    <field name="progress_percentage" string="Progress" widget="progressbar" width="100px"/>
                    <field name="effort_level" string="Effort" width="80px"/>
                    
                    <!-- Timeline Information -->
                    <field name="due_date" width="100px"/>
                    <field name="is_overdue" string="Overdue" width="50px" 
                           decoration-danger="is_overdue"
                           widget="boolean"
                           optional="show"/>
                    
                    <!-- Assignment -->
                    <field name="user_id" widget="many2one_avatar_user" width="120px"/>
                    
                    <!-- Time Tracking -->
                    <field name="time_spent" string="Spent (min)" width="80px" optional="show" sum="Total Spent"/>
                    <field name="estimated_time" string="Est. (min)" width="80px" optional="hide"/>
                    <field name="task_age_days" string="Age" width="60px" optional="show"/>
                    
                    <!-- Dates -->
                    <field name="created_date" string="Created" width="100px" optional="hide"/>
                    <field name="completed_date" string="Completed" width="100px" optional="hide"/>
                    
                    <!-- Additional Information -->
                    <field name="notes" string="Notes" width="200px" optional="hide"/>
                    <field name="active" string="Active" width="60px" optional="hide" widget="boolean"/>
                    
                    <!-- Hidden fields for decorations -->
                    <field name="kanban_state" column_invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Professional Form View -->
        <record id="view_todo_task_form" model="ir.ui.view">
            <field name="name">todo.task.form</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <form class="todo_form_view">
                    <header>
                        <!-- Primary Action Buttons -->
                        <button name="action_toggle_done" type="object" 
                                string="Complete Task" class="oe_highlight"
                                invisible="is_done"
                                help="Mark this task as completed">
                            <i class="fa fa-check me-1"/>
                        </button>
                        <button name="action_toggle_done" type="object" 
                                string="Reopen Task" class="btn-secondary"
                                invisible="not is_done"
                                help="Reopen this completed task">
                            <i class="fa fa-undo me-1"/>
                        </button>
                        
                        <!-- Quick Status Actions -->
                        <button name="action_start_work" type="object" 
                                string="Start Working" class="btn-primary"
                                invisible="status == 'in_progress' or is_done"
                                help="Mark as in progress and start working">
                            <i class="fa fa-play me-1"/>
                        </button>
                        <button name="action_mark_review" type="object" 
                                string="Ready for Review" class="btn-warning"
                                invisible="status == 'review' or is_done"
                                help="Mark task as ready for review">
                            <i class="fa fa-eye me-1"/>
                        </button>
                        
                        <!-- Archive Management -->
                        <button name="action_archive" type="object" 
                                string="Archive" class="btn-secondary"
                                invisible="not active"
                                help="Archive this task">
                            <i class="fa fa-archive me-1"/>
                        </button>
                        <button name="action_unarchive" type="object" 
                                string="Restore" class="btn-info"
                                invisible="active"
                                help="Restore from archive">
                            <i class="fa fa-upload me-1"/>
                        </button>
                        
                        <!-- Status Bar -->
                        <field name="status" widget="statusbar" 
                               statusbar_visible="draft,todo,in_progress,review,done"
                               clickable="True"/>
                    </header>
                    
                    <sheet>
                        <!-- Alert Messages -->
                        <div class="alert alert-danger mb-4" role="alert" invisible="not is_overdue">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-exclamation-triangle fa-2x me-3 text-danger"/>
                                <div>
                                    <h5 class="alert-heading mb-1">
                                        <i class="fa fa-clock-o me-1"/>This task is overdue!
                                    </h5>
                                    <p class="mb-0">Due date was <field name="due_date" readonly="1" class="fw-bold"/>. 
                                    Consider updating the deadline or prioritizing this task.</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-warning mb-4" role="alert" invisible="active">
                            <div class="d-flex align-items-center justify-content-between">
                                <div class="d-flex align-items-center">
                                    <i class="fa fa-archive fa-2x me-3"/>
                                    <div>
                                        <h5 class="alert-heading mb-1">
                                            <i class="fa fa-archive me-1"/>This task is archived
                                        </h5>
                                        <p class="mb-0">Archived tasks are hidden from main views but can be restored anytime.</p>
                                    </div>
                                </div>
                                <button name="action_unarchive" type="object" string="Restore" 
                                        class="btn btn-outline-primary btn-sm">
                                    <i class="fa fa-upload me-1"/>
                                </button>
                            </div>
                        </div>
                        
                        <div class="alert alert-success mb-4" role="alert" invisible="not is_done">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-check-circle fa-2x me-3 text-success"/>
                                <div>
                                    <h5 class="alert-heading mb-1">
                                        <i class="fa fa-trophy me-1"/>Task completed!
                                    </h5>
                                    <p class="mb-0">Completed on <field name="completed_date" readonly="1" class="fw-bold"/>. 
                                    Great job getting this done!</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Progress Indicator -->
                        <div class="row mb-4" invisible="is_done">
                            <div class="col-12">
                                <div class="progress-section">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0">
                                            <i class="fa fa-chart-line me-2"/>Task Progress
                                        </h6>
                                        <span class="badge bg-primary fs-6">
                                            <field name="progress_percentage" readonly="1"/>%
                                        </span>
                                    </div>
                                    <field name="progress_percentage" widget="progressbar" class="mb-2"/>
                                    <small class="text-muted">
                                        <i class="fa fa-info-circle me-1"/>
                                        Progress automatically updates based on task status
                                    </small>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Task Header Info -->
                        <div class="oe_title mb-4">
                            <label for="name" class="o_form_label">Task Name</label>
                            <h1>
                                <field name="name" placeholder="Enter a clear, actionable task name..." 
                                       class="o_text_overflow" required="1"/>
                            </h1>
                        </div>
                        
                        <!-- Key Information Cards -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="card h-100 task-config-card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0">
                                            <i class="fa fa-cog me-2"/>Task Configuration
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <group>
                                            <field name="priority" widget="priority" 
                                                   help="Set task priority to help with organization"/>
                                            <field name="effort_level" 
                                                   help="Estimate how much effort this task will require"/>
                                            <field name="user_id" options="{'no_create': True}"
                                                   help="Assign this task to a team member"/>
                                            <field name="active" help="Uncheck to archive this task"/>
                                        </group>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card h-100 timeline-card">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="mb-0">
                                            <i class="fa fa-calendar me-2"/>Timeline and Status
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <group>
                                            <field name="status" help="Current status of the task"/>
                                            <field name="is_done" help="Check when task is completed"/>
                                            <field name="due_date" help="When should this task be completed?"/>
                                            <field name="created_date" readonly="1"/>
                                            <field name="completed_date" readonly="1" 
                                                   invisible="not completed_date"
                                                   help="Automatically set when task is marked done"/>
                                        </group>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Time Tracking Card -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card time-tracking-card">
                                    <div class="card-header bg-warning text-dark">
                                        <h5 class="mb-0">
                                            <i class="fa fa-clock-o me-2"/>Time Tracking and Analytics
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <group string="Time Estimates">
                                                    <field name="estimated_time" readonly="1" 
                                                           string="Estimated (minutes)"
                                                           help="Auto-calculated based on effort level"/>
                                                    <field name="time_spent" string="Actual Time (minutes)"
                                                           help="Track actual time spent on this task"/>
                                                </group>
                                            </div>
                                            <div class="col-md-4">
                                                <group string="Task Metrics">
                                                    <field name="task_age_days" readonly="1" 
                                                           string="Task Age (days)"
                                                           help="How many days since task was created"/>
                                                    <field name="kanban_state" readonly="1"
                                                           help="Current kanban state"/>
                                                </group>
                                            </div>
                                            <div class="col-md-4">
                                                <group string="Quick Actions">
                                                    <div class="d-grid gap-2">
                                                        <button name="action_set_priority_urgent" type="object" 
                                                                string="Mark Urgent" class="btn btn-danger btn-sm"
                                                                help="Set priority to urgent">
                                                            <i class="fa fa-exclamation-triangle me-1"/>
                                                        </button>
                                                        <button name="action_set_priority_high" type="object" 
                                                                string="High Priority" class="btn btn-warning btn-sm"
                                                                help="Set priority to high">
                                                            <i class="fa fa-fire me-1"/>
                                                        </button>
                                                        <button name="action_duplicate_task" type="object" 
                                                                string="Duplicate Task" class="btn btn-secondary btn-sm"
                                                                help="Create a copy of this task">
                                                            <i class="fa fa-copy me-1"/>
                                                        </button>
                                                    </div>
                                                </group>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Content Tabs -->
                        <notebook>
                            <page string="Description" name="description">
                                <div class="tab-content-header mb-3">
                                    <h6 class="text-muted mb-1">
                                        <i class="fa fa-file-text-o me-2"/>Detailed Description
                                    </h6>
                                    <small class="text-muted">Provide comprehensive details about what needs to be done</small>
                                </div>
                                <field name="description" 
                                       placeholder="Describe the task in detail...&#10;&#10;• What exactly needs to be done?&#10;• Any specific requirements or constraints?&#10;• Expected outcomes or deliverables?&#10;• Resources or tools needed?"
                                       widget="text"
                                       options="{'resizable': true}"/>
                            </page>
                            
                            <page string="Notes and Updates" name="notes">
                                <div class="tab-content-header mb-3">
                                    <h6 class="text-muted mb-1">
                                        <i class="fa fa-sticky-note-o me-2"/>Working Notes
                                    </h6>
                                    <small class="text-muted">Keep track of progress, blockers, ideas, and updates</small>
                                </div>
                                <field name="notes" 
                                       placeholder="Add your working notes here...&#10;&#10;• Progress updates&#10;• Challenges encountered&#10;• Ideas and solutions&#10;• Next steps&#10;• Links and references"
                                       widget="text"
                                       options="{'resizable': true}"/>
                            </page>
                            
                            <page string="Analytics Dashboard" name="analytics">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card border-primary analytics-card">
                                            <div class="card-header bg-primary text-white">
                                                <h6 class="mb-0">
                                                    <i class="fa fa-line-chart me-2"/>Progress Metrics
                                                </h6>
                                            </div>
                                            <div class="card-body">
                                                <group>
                                                    <field name="progress_percentage" readonly="1" 
                                                           widget="percentage" string="Completion %"/>
                                                    <field name="kanban_state" readonly="1" string="Current State"/>
                                                    <field name="status" readonly="1" string="Status"/>
                                                    <field name="is_overdue" readonly="1" 
                                                           string="Overdue Status" widget="boolean"/>
                                                </group>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card border-info analytics-card">
                                            <div class="card-header bg-info text-white">
                                                <h6 class="mb-0">
                                                    <i class="fa fa-clock-o me-2"/>Time Analysis
                                                </h6>
                                            </div>
                                            <div class="card-body">
                                                <group>
                                                    <field name="estimated_time" readonly="1" 
                                                           string="Estimated Minutes"/>
                                                    <field name="time_spent" readonly="1" 
                                                           string="Actual Minutes"/>
                                                    <field name="task_age_days" readonly="1" 
                                                           string="Age in Days"/>
                                                    <field name="effort_level" readonly="1" 
                                                           string="Effort Level"/>
                                                </group>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids" options="{'display_log_button': True}"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Kanban View with Clean Layout -->
        <record id="view_todo_task_kanban" model="ir.ui.view">
            <field name="name">todo.task.kanban</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status" 
                        class="o_kanban_small_column todo_kanban_view"
                        quick_create="false"
                        can_open="true"
                        group_create="false"
                        group_delete="false"
                        group_edit="false">
                    <field name="name"/>
                    <field name="priority"/>
                    <field name="due_date"/>
                    <field name="user_id"/>
                    <field name="is_done"/>
                    <field name="status"/>
                    <field name="effort_level"/>
                    <field name="is_overdue"/>
                    <field name="progress_percentage"/>
                    <field name="active"/>
                    <field name="task_age_days"/>
                    <field name="time_spent"/>
                    <field name="estimated_time"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click todo_kanban_card"
                                 t-attf-class="#{record.is_done.raw_value ? 'card-completed' : ''}
                                               #{!record.active.raw_value ? 'card-archived' : ''}
                                               #{record.is_overdue.raw_value and !record.is_done.raw_value ? 'card-overdue' : ''}
                                               #{record.priority.raw_value === '4' ? 'card-urgent' : ''}
                                               #{record.priority.raw_value === '3' ? 'card-high' : ''}">
                                
                                <!-- Card Header -->
                                <div class="kanban-card-header">
                                    <div class="kanban-title-section">
                                        <h6 class="kanban-task-title">
                                            <field name="name"/>
                                        </h6>
                                        <div class="kanban-badges-row">
                                            <!-- Priority Badge -->
                                            <t t-if="record.priority.raw_value === '4'">
                                                <span class="badge badge-urgent">
                                                    <i class="fa fa-bolt"/>URGENT
                                                </span>
                                            </t>
                                            <t t-elif="record.priority.raw_value === '3'">
                                                <span class="badge badge-high">
                                                    <i class="fa fa-fire"/>HIGH
                                                </span>
                                            </t>
                                            <t t-elif="record.priority.raw_value === '2'">
                                                <span class="badge badge-medium">
                                                    <i class="fa fa-arrow-up"/>MEDIUM
                                                </span>
                                            </t>
                                            
                                            <!-- Status Badges -->
                                            <t t-if="record.is_overdue.raw_value and !record.is_done.raw_value">
                                                <span class="badge badge-overdue">
                                                    <i class="fa fa-clock-o"/>OVERDUE
                                                </span>
                                            </t>
                                            <t t-if="record.is_done.raw_value">
                                                <span class="badge badge-completed">
                                                    <i class="fa fa-check"/>DONE
                                                </span>
                                            </t>
                                            <t t-if="!record.active.raw_value">
                                                <span class="badge badge-archived">
                                                    <i class="fa fa-archive"/>ARCHIVED
                                                </span>
                                            </t>
                                        </div>
                                    </div>
                                    
                                    <!-- Dropdown Menu -->
                                    <div class="o_dropdown_kanban dropdown">
                                        <a class="dropdown-toggle o-no-caret btn" role="button" 
                                           data-bs-toggle="dropdown" href="#" aria-label="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <a type="edit" class="dropdown-item">
                                                <i class="fa fa-edit me-2"/>Edit Task
                                            </a>
                                            <a name="action_start_work" type="object" class="dropdown-item"
                                               t-if="record.status.raw_value !== 'in_progress' and !record.is_done.raw_value">
                                               <i class="fa fa-play me-2"/>Start Working
                                            </a>
                                            <a name="action_mark_review" type="object" class="dropdown-item"
                                               t-if="record.status.raw_value !== 'review' and !record.is_done.raw_value">
                                               <i class="fa fa-eye me-2"/>Mark for Review
                                            </a>
                                            <div class="dropdown-divider"/>
                                            <a name="action_set_priority_urgent" type="object" class="dropdown-item">
                                               <i class="fa fa-bolt me-2"/>Set Urgent
                                            </a>
                                            <a name="action_duplicate_task" type="object" class="dropdown-item">
                                               <i class="fa fa-copy me-2"/>Duplicate
                                            </a>
                                            <div class="dropdown-divider"/>
                                            <a name="action_archive" type="object" class="dropdown-item" 
                                               t-if="record.active.raw_value">
                                               <i class="fa fa-archive me-2"/>Archive
                                            </a>
                                            <a name="action_unarchive" type="object" class="dropdown-item" 
                                               t-if="!record.active.raw_value">
                                               <i class="fa fa-upload me-2"/>Restore
                                            </a>
                                            <div class="dropdown-divider"/>
                                            <a type="delete" class="dropdown-item text-danger">
                                               <i class="fa fa-trash me-2"/>Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Progress Section -->
                                <div class="kanban-progress-section">
                                    <div class="progress-info">
                                        <span class="progress-label">
                                            <i class="fa fa-chart-line"/>Progress
                                        </span>
                                        <span class="progress-value">
                                            <t t-esc="record.progress_percentage.raw_value"/>%
                                        </span>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar" 
                                             t-attf-class="#{record.is_done.raw_value ? 'bg-success' : 'bg-primary'}"
                                             role="progressbar" 
                                             t-attf-style="width: #{record.progress_percentage.raw_value}%">
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Task Details Section -->
                                <div class="kanban-details-section">
                                    <!-- Effort and Priority -->
                                    <div class="detail-row">
                                        <span class="detail-item">
                                            <i class="fa fa-tachometer"/>
                                            <field name="effort_level"/>
                                        </span>
                                        <span class="detail-item">
                                            <field name="priority" widget="priority"/>
                                        </span>
                                    </div>
                                    
                                    <!-- Due Date -->
                                    <t t-if="record.due_date.raw_value">
                                        <div class="detail-row">
                                            <span class="detail-item due-date">
                                                <i class="fa fa-calendar"/>
                                                Due: <field name="due_date"/>
                                            </span>
                                        </div>
                                    </t>
                                    
                                    <!-- Time Information -->
                                    <div class="detail-row time-details">
                                        <span class="time-item">
                                            <i class="fa fa-clock-o"/>
                                            <t t-esc="record.estimated_time.raw_value"/>m est.
                                        </span>
                                        <t t-if="record.time_spent.raw_value">
                                            <span class="time-item">
                                                <i class="fa fa-hourglass-half"/>
                                                <t t-esc="record.time_spent.raw_value"/>m spent
                                            </span>
                                        </t>
                                        <span class="time-item">
                                            <i class="fa fa-history"/>
                                            <t t-esc="record.task_age_days.raw_value"/>d old
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Card Footer -->
                                <div class="kanban-card-footer">
                                    <div class="footer-left">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                    <div class="footer-right">
                                        <field name="is_done" widget="boolean_toggle"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Comprehensive Search View -->
        <record id="view_todo_task_search" model="ir.ui.view">
            <field name="name">todo.task.search</field>
            <field name="model">todo.task</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Search Fields -->
                    <field name="name" string="Task Name" 
                           filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                    <field name="notes" string="Notes"/>
                    <field name="user_id" string="Assigned To"/>
                    <field name="status" string="Status"/>
                    <field name="effort_level" string="Effort Level"/>
                    
                    <!-- Quick Status Filters -->
                    <filter name="my_tasks" string="My Tasks" 
                            domain="[('user_id', '=', uid)]"/>
                    <filter name="active_tasks" string="Active" 
                            domain="[('is_done', '=', False), ('active', '=', True)]"/>
                    <filter name="completed_tasks" string="Completed" 
                            domain="[('is_done', '=', True)]"/>
                    <filter name="overdue_tasks" string="Overdue" 
                            domain="[('is_overdue', '=', True)]"/>
                    
                    <separator/>
                    <!-- Archive Management -->
                    <filter name="archived_tasks" string="Archived" 
                            domain="[('active', '=', False)]"/>
                    <filter name="all_tasks" string="Show All" 
                            domain="['|', ('active', '=', True), ('active', '=', False)]"/>
                    
                    <separator/>
                    <!-- Status Filters -->
                    <filter name="draft_status" string="Draft" 
                            domain="[('status', '=', 'draft')]"/>
                    <filter name="todo_status" string="To Do" 
                            domain="[('status', '=', 'todo')]"/>
                    <filter name="in_progress_status" string="In Progress" 
                            domain="[('status', '=', 'in_progress')]"/>
                    <filter name="review_status" string="Under Review" 
                            domain="[('status', '=', 'review')]"/>
                    <filter name="done_status" string="Done" 
                            domain="[('status', '=', 'done')]"/>
                    <filter name="cancelled_status" string="Cancelled" 
                            domain="[('status', '=', 'cancelled')]"/>
                    
                    <separator/>
                    <!-- Priority Filters -->
                    <filter name="urgent_priority" string="Urgent" 
                            domain="[('priority', '=', '4')]"/>
                    <filter name="high_priority" string="High Priority" 
                            domain="[('priority', 'in', ['3', '4'])]"/>
                    <filter name="medium_priority" string="Medium Priority" 
                            domain="[('priority', '=', '2')]"/>
                    <filter name="low_priority" string="Low Priority" 
                            domain="[('priority', 'in', ['0', '1'])]"/>
                    
                    <separator/>
                    <!-- Effort Level Filters -->
                    <filter name="quick_tasks" string="Quick Tasks (XS/S)" 
                            domain="[('effort_level', 'in', ['xs', 's'])]"/>
                    <filter name="medium_tasks" string="Medium Tasks (M)" 
                            domain="[('effort_level', '=', 'm')]"/>
                    <filter name="big_tasks" string="Big Tasks (L/XL)" 
                            domain="[('effort_level', 'in', ['l', 'xl'])]"/>
                    
                    <separator/>
                    <!-- Time-based Filters -->
                    <filter name="recent_tasks" string="Recent (7 days)" 
                            domain="[('task_age_days', '&lt;=', 7)]"/>
                    <filter name="old_tasks" string="Old (30+ days)" 
                            domain="[('task_age_days', '&gt;=', 30)]"/>
                    
                    <!-- Group By Options -->
                    <group expand="0" string="Group By">
                        <filter name="group_by_status" string="Status" 
                                context="{'group_by': 'status'}"/>
                        <filter name="group_by_priority" string="Priority" 
                                context="{'group_by': 'priority'}"/>
                        <filter name="group_by_effort" string="Effort Level" 
                                context="{'group_by': 'effort_level'}"/>
                        <filter name="group_by_user" string="Assigned User" 
                                context="{'group_by': 'user_id'}"/>
                        <filter name="group_by_due_date" string="Due Date" 
                                context="{'group_by': 'due_date'}"/>
                        <filter name="group_by_created_date" string="Created Date" 
                                context="{'group_by': 'created_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Menu Structure -->
        <menuitem id="menu_todo_root" name="Todo Manager" sequence="5" 
                  web_icon="todo_app,static/description/icon.png"/>
        
        <menuitem id="menu_todo_main" name="Tasks" parent="menu_todo_root" sequence="10"/>
        
        <menuitem id="menu_todo_tasks" name="My Tasks" 
                  parent="menu_todo_main" action="action_todo_task" sequence="10"/>
        
        <menuitem id="menu_todo_all" name="All Tasks" 
                  parent="menu_todo_main" action="action_todo_task_all" sequence="20"/>
        
        <menuitem id="menu_todo_archived" name="Archive" 
                  parent="menu_todo_main" action="action_todo_task_archived" sequence="30"/>

    </data>
</odoo>